@model IEnumerable<WebApp.Models.GroupViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Group</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Groups" asp-action="Index" method="get">
    <p>
        NameOfSpeciality: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameOfGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speciality)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speciality)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
